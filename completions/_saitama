#compdef saitama

autoload -U is-at-least

_saitama() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-h[Print help information]' \
'--help[Print help information]' \
'-V[Print version information]' \
'--version[Print version information]' \
'*-v[More output per occurrence]' \
'*--verbose[More output per occurrence]' \
'(-v --verbose)*-q[Less output per occurrence]' \
'(-v --verbose)*--quiet[Less output per occurrence]' \
":: :_saitama_commands" \
"*::: :->saitama" \
&& ret=0
    case $state in
    (saitama)
        words=($line[1] "${words[@]}")
        (( CURRENT += 1 ))
        curcontext="${curcontext%:*:*}:saitama-command-$line[1]:"
        case $line[1] in
            (punch)
_arguments "${_arguments_options[@]}" \
'-u+[Target URL]:URL: ' \
'--url=[Target URL]:URL: ' \
'*-H+[Headers on the request]:HEADERS: ' \
'*--headers=[Headers on the request]:HEADERS: ' \
'-m+[HTTP method]:METHOD:(options get post put delete head trace connect patch)' \
'--method=[HTTP method]:METHOD:(options get post put delete head trace connect patch)' \
'-t+[How many worker threads to start]:THREAD_COUNT: ' \
'--thread-count=[How many worker threads to start]:THREAD_COUNT: ' \
'-r+[How many RPS to drive. This can max out on certain devices]:RPS: ' \
'--rps=[How many RPS to drive. This can max out on certain devices]:RPS: ' \
'-d+[How long to run the test. Used with duration_unit]:DURATION: ' \
'--duration=[How long to run the test. Used with duration_unit]:DURATION: ' \
'-n+[What unit to run with the test]:DURATION_UNIT:(second minute hour)' \
'--duration-unit=[What unit to run with the test]:DURATION_UNIT:(second minute hour)' \
'-b+[Body of the request]:BODY: ' \
'--body=[Body of the request]:BODY: ' \
'-h[Print help information]' \
'--help[Print help information]' \
'-V[Print version information]' \
'--version[Print version information]' \
'*-v[More output per occurrence]' \
'*--verbose[More output per occurrence]' \
'(-v --verbose)*-q[Less output per occurrence]' \
'(-v --verbose)*--quiet[Less output per occurrence]' \
&& ret=0
;;
(help)
_arguments "${_arguments_options[@]}" \
'*-v[More output per occurrence]' \
'*--verbose[More output per occurrence]' \
'(-v --verbose)*-q[Less output per occurrence]' \
'(-v --verbose)*--quiet[Less output per occurrence]' \
'*::subcommand -- The subcommand whose help message to display:' \
&& ret=0
;;
        esac
    ;;
esac
}

(( $+functions[_saitama_commands] )) ||
_saitama_commands() {
    local commands; commands=(
'punch:Load test against an endpoint' \
'help:Print this message or the help of the given subcommand(s)' \
    )
    _describe -t commands 'saitama commands' commands "$@"
}
(( $+functions[_saitama__help_commands] )) ||
_saitama__help_commands() {
    local commands; commands=()
    _describe -t commands 'saitama help commands' commands "$@"
}
(( $+functions[_saitama__punch_commands] )) ||
_saitama__punch_commands() {
    local commands; commands=()
    _describe -t commands 'saitama punch commands' commands "$@"
}

_saitama "$@"
